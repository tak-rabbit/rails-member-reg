<p id="notice"><%= notice %></p>

<h1>
  <%= link_to '会員登録', new_member_path , class: 'header-menu' %>
  一覧
</h1>
<% if @members.present? %>
<table>
  <thead>
    <tr>
      <th><%= t('view.name') %></th>
      <th><%= t('view.email') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= link_to '編集', edit_member_path(member) %></td>
        <td><%= link_to '削除', member, method: :delete, data: { confirm: '本当によろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>
